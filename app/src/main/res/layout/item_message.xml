<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12 jul 2017"
        android:visibility="gone" />
    <android.support.v7.widget.CardView
        android:id="@+id/cvMy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvDate"
        android:minHeight="55dp"
        android:padding="@dimen/small_margin"
        android:visibility="gone"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/middle_margin">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/middle_margin"
                android:autoLink="web"
                android:gravity="center"
                android:maxWidth="200dp"
                android:text="dfdfdssdadsfdsffsdfsdfsfsfsfsfsdfsdfsdfsfsfsfsdfsdfsdfsfsdasdasÐ°dasdasdasdasasdasdsdffdsff"
                android:textAppearance="@style/TextSmallDefault"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvMyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="1"
                android:alpha="0.8"
                android:text="12:43"
                android:textColor="@color/white"
                android:textSize="@dimen/font_10" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/llPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvDate"
        android:layout_marginLeft="@dimen/small_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cvPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:minHeight="55dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/middle_margin">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvMessagePlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/middle_margin"
                        android:autoLink="web"
                        android:gravity="center"
                        android:maxWidth="200dp"
                        android:paddingLeft="@dimen/middle_margin"
                        android:text="dfdfdssdfdsff"
                        android:textAppearance="@style/TextSmallDefault"
                        android:textColor="@color/grey_text" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvPlayerTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:alpha="0.8"
                        android:maxLength="5"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="12:43"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/font_10" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>