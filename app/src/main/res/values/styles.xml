<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/ButtonDefault</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextSmallDefault">
        <item name="android:textColor">@color/textColorSmall</item>
        <item name="android:textSize">@dimen/font_13</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextLittleDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_10</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="DefaultEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/transparent</item>
    </style>
    <style name="ButtonDefault" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="TextMiddleDefault">
        <item name="android:textColor">#242424</item>
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
